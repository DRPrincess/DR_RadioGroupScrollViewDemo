<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.dr_radiogroupscrollviewdemo.MainActivity"
    android:background="@color/white">

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rbtnGoods"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:background="@drawable/selector_underline"
            android:textColor="@drawable/selector_text_color"
            android:text="商品"
            android:gravity="center"
            tools:checked="true">
        </RadioButton>

        <RadioButton
            android:id="@+id/rbtnComment"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:background="@drawable/selector_underline"
            android:textColor="@drawable/selector_text_color"
            android:text="评价"
            android:gravity="center">
        </RadioButton>

        <RadioButton
            android:id="@+id/rbtnDetail"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:background="@drawable/selector_underline"
            android:textColor="@drawable/selector_text_color"
            android:text="详情"
            android:gravity="center">
        </RadioButton>

        <RadioButton
            android:id="@+id/rbtnRecommend"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:background="@drawable/selector_underline"
            android:textColor="@drawable/selector_text_color"
            android:text="推荐"
            android:gravity="center">
        </RadioButton>
    </RadioGroup>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/grey_secondary"/>

    <com.dr_radiogroupscrollviewdemo.MyScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/llScrollContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        </LinearLayout>



    </com.dr_radiogroupscrollviewdemo.MyScrollView>
</LinearLayout>
